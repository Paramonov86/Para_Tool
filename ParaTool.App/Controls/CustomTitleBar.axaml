<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ParaTool.App.Controls.CustomTitleBar"
             Height="32">
    <Grid ColumnDefinitions="Auto,*,Auto" Background="{StaticResource PanelBgBrush}">
        <!-- Title -->
        <TextBlock Grid.Column="0"
                   Text="ParaTool"
                   FontSize="13" FontWeight="SemiBold"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   VerticalAlignment="Center"
                   Margin="12,0,0,0" />

        <!-- Drag region -->
        <Border Grid.Column="1" Background="Transparent"
                Name="DragRegion" />

        <!-- Window buttons -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="0">
            <Button Name="MinimizeBtn" Content="&#xE949;"
                    FontFamily="Segoe MDL2 Assets" FontSize="10"
                    Width="46" Height="32"
                    Background="Transparent"
                    Foreground="{StaticResource TextMutedBrush}"
                    BorderThickness="0" CornerRadius="0" />
            <Button Name="MaximizeBtn" Content="&#xE739;"
                    FontFamily="Segoe MDL2 Assets" FontSize="10"
                    Width="46" Height="32"
                    Background="Transparent"
                    Foreground="{StaticResource TextMutedBrush}"
                    BorderThickness="0" CornerRadius="0" />
            <Button Name="CloseBtn" Content="&#xE106;"
                    FontFamily="Segoe MDL2 Assets" FontSize="10"
                    Width="46" Height="32"
                    Background="Transparent"
                    Foreground="{StaticResource TextMutedBrush}"
                    BorderThickness="0" CornerRadius="0" />
        </StackPanel>
    </Grid>
</UserControl>
